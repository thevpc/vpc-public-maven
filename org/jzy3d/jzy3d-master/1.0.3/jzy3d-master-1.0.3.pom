	<artifactId>jzy3d-master</artifactId>
	<version>1.0.3</version>
	<packaging>pom</packaging>

	<name>Jzy3d Master Project</name>
	<url>http://www.jzy3d.org</url>
	<description>A java API to draw 3d charts.</description>

	<developers>
